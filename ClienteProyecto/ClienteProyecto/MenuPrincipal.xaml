        <Button x:Name="acercaBT" Content="Acerca de" HorizontalAlignment="Left" Margin="1032,429,0,0" VerticalAlignment="Top" Width="94" Background="#57A5FF" FontSize="15" FontWeight="Bold" Height="35"/>
        <Button x:Name="helpBT" Content="?" HorizontalAlignment="Left" Margin="1193,429,0,0" VerticalAlignment="Top" Width="39" Background="Transparent" FontSize="20" FontWeight="Bold" Height="35"/>
        <Button x:Name="puntuacionesBT" Content="Mejores puntuaciones" HorizontalAlignment="Left" Margin="519,661,0,0" VerticalAlignment="Top" Width="315" Height="36" Background="#57A5FF" FontSize="25" FontWeight="Bold" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
