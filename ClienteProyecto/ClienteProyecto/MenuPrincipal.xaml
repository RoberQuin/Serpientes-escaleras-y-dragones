        <Image Margin="365,10,365,107" Source="LogoJuego.png" Stretch="Fill"/>
        <Image Margin="25,46,843,237" Source="dragon.png" Stretch="Fill"/>
        <Rectangle Fill="Red" HorizontalAlignment="Left" Height="49" Margin="25,358,0,0" Stroke="Black" VerticalAlignment="Top" Width="1303"/>
